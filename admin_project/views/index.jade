extends layout

block content
  h1= title


  form(action='/', method="post", enctype="multipart/form-data")
  h4 ▶ 바스켓 추가하기
    p
      input(type='text', name="basket_name", placeholder="Basket name")
    p
      input(type='file', name="basket_image")
  h4 ▶ 카테고리 추가하기

  h5 기타
    script(type='text/javascript')
    table(border='0')
    tr
      td  #{category.big_category}
          each category, i in categorys
  
    
              td  
                input(type='checkbox', name="small_category" value = '#{category.small_category}')
                | #{category.small_category}
      
    p
      input(type='submit', value="업로드")
      
